{
    "parser": "@typescript-eslint/parser",
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "@typescript-eslint", 
        "prettier"
    ],
    "settings":{
        "import/resolver":{
            "node":{
                "extensions":[".js",".ts"]
            }
        }
    },
    "rules":{
        "prettier/prettier": [
            "error",
            {
                "printWidth": 100,
                "singleQuote": true,
                "trailingComma": "es5"
            }
        ],
        "@typescript-eslint/no-var-requires": ["off"],
        "@typescript-eslint/explicit-module-boundary-types":["off"]
    }
}