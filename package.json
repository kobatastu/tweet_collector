{
  "name": "docker-sample",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "start": "node build/app.js",
    "start-dev": "ts-node src/app.ts",
    "test": "eslint",
    "eslint": "eslint --ext .ts .",
    "clean": "rm -rf ./build && mkdir ./build",
    "compile": "tsc",
    "build": "run-s clean compile set-revision",
    "activate": "gcloud config configurations activate tweet-collector",
    "queue-deploy": "npm run activate && gcloud app deploy queue.yaml",
    "make-revision-file": "echo ${CIRCLE_SHA1:-$(git rev-parse head)} > ./build/revision.txt",
    "set-app-version": "echo $(TZ=Asia/Tokyo date \"+%Y%m%d\")-$(cat build/revision.txt | cut -c 1-8) > build/app-version.txt",
    "set-revision": "run-s make-revision-file set-app-version",
    "build-image": "gcloud builds submit --project tweet-collector"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/config": "0.0.37",
    "@types/express": "^4.17.9",
    "@types/node": "^14.14.7",
    "@types/twitter": "^1.7.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "eslint": "^7.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@google-cloud/tasks": "^2.1.3",
    "config": "^3.3.2",
    "express": "^4.17.1",
    "express-promise-router": "^4.0.1",
    "firebase-admin": "^9.4.1",
    "twitter": "^1.7.1",
    "winston": "^3.3.3"
  }
}
